{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "double", "avoid-escape", "avoid-template"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "semicolon": [true, "always", "ignore-interfaces", "ignore-bound-class-methods"]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    }
}